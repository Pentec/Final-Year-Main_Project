extends index
block extFiles
    script(src='/libs/angular/angular.min.js')
    link(rel='stylesheet', href="/libs/perfect-scrollbar/min/perfect-scrollbar.min.css")
    script(src="/libs/perfect-scrollbar/min/perfect-scrollbar.min.js")
    script(src='/javascripts/app.js')
    link(rel="stylesheet", href="/stylesheets/addUser.css")
block mainContent
    .area
        .container
            .col-xs-12
                .form-wrap.panel
                    .page-header.mypageHeader
                        h3 Add the details of the new user
                    form.form-horizontal(role="form", name="addNewUser", method="post", action="/create")#signup-form
                        .form-group
                            label.col-sm-2.control-label(for="username") Username
                            .col-sm-9
                                input(type="text", name="username",value=username, placeholder="Please enter their username eg.John").form-control
                        .form-group
                            label.col-sm-2.control-label(for="surname") Surname
                            .col-sm-9
                                input(type="text", name="surname",value=surname, placeholder="Please enter their Surname eg.Doe").form-control
                        .form-group
                            label.col-sm-2.control-label(for="email") Email
                            .col-sm-9
                                input(type="text", name="email",value=email, placeholder="Please enter their Email address eg.abc@gmail.com").form-control
                        .form-group
                            label.col-sm-2.control-label(for="user_rights") User Rights
                            .col-sm-9
                                input(type="text", name="user_rights",value=user_rights, placeholder="Enter User Rights: 1 for admin, 2 for regular user").form-control
                        .form-group
                            label.col-sm-2.control-label(for="Password") Password
                            .col-sm-9
                                input(type="text", name="password",value=password, placeholder="Please enter their Password").form-control
                        .form-group
                            label.col-sm-2.control-label(for="department") Department
                            .col-sm-9
                                input(type="text", name="department",value=department, placeholder="Please enter their Department eg.Obstetrics").form-control
                        .form-group
                            label.col-sm-2.control-label(for="staff_type") Staff Type
                            .col-sm-9
                                input(type="text", name="staff_type",value=staff_type, placeholder="Please enter their Staff Type eg.Intern").form-control
                        .form-group
                            .col-sm-offset-2.col-sm-9
                                button.btn.btn.btn-custom(type='submit')
                                    i.fa.fa-magnet
                                    | Add User
                        script.
                            $('.area').perfectScrollbar();