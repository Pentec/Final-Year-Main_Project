                        img(src='images/TutImages/addUser.jpg')
                        br
                        br
                        p Forms.
                        img(src='images/TutImages/forms.jpg')
                        br
                        br
                        p Profile.
                        img(src='images/TutImages/editProfile.jpg')
                        br
                        br
                        p Query.
                        img(src='images/TutImages/Query.jpg')
                        br
                        br
                        p Dashboard.
                        img(src='images/TutImages/Dashboard.jpg')
                        br
                        br
                        p Notifications.
                        img(src='images/TutImages/notifications.jpg')
                        br
                        br
                        p Predict.
                        img(src='images/TutImages/predict.jpg')
                        br
                        br
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Close
