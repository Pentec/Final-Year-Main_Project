        #myModal.modal.fade(role='dialog')
            .modal-dialog model-lg
                // Modal content
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal') ×
                        h4.modal-title PIMS Tutorial
                    .modal-body
                        p PIMS Space.
                        img(src='images/TutImages/pimsAdminSpace.jpg')
