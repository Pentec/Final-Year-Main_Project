extends layout
block extFiles
    link(rel="stylesheet", href="/stylesheets/login.css")
block content
    div.jumbotron.center-block.banner
        img(src='images/KPTH_Logo.png', width="550px").img-responsive.center-block
    section#login
        div.container-fluid
            div.row
                div.col-xs-4.col-xs-offset-4#errordiv
                    if (!send)
                        .alert.alert-danger
                            p= message
                div.col-xs-12
                    div.form-wrap.panel
                        h1 Login with your username
                        form(role="form", method="post", autocomplete="off", name="loginform", id="loginform")
                            div.form-group
                                input.form-control#userid(type="text", placeholder="Username", name="userid", autofocus)
                            div.form-group
                                input.form-control#pswd(type="password", placeholder="Password", name="pswd")
                            input.btn.btn-custom.btn-lg.btn-block#btn-login(type="submit", value="Log In")
                        a.forget Forgot your password?
    footer.text-center.center-block
        h2 Back to&nbsp;
        a(href="/splash") Home